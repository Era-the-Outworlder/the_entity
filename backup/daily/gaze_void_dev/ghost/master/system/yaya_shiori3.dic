SHIORI3FW.Dl2ToDll
{
	SHIORI3FW.ExecuteDl2ToDll('')
}

//------------------------------------------------------------------------------
//Function Name : SHIORI3FW.ExecuteDl2ToDll
//Function : Process dl2 that exists in the specified directory
//Argument : _argv[0] Path to be processed (relative path specification from AYA dll)
//------------------------------------------------------------------------------
SHIORI3FW.ExecuteDl2ToDll
{
	// Enumerate files in the specified directory
	_files   = TOLOWER(FENUM(_argv[0]))
	// ccumulate files with extension dl2 in a list Recursively processing them in child directories
	_targets = IARRAY
	foreach _files; _file {
		if SUBSTR(_file, 0, 1) == '\'
			SHIORI3FW.ExecuteDl2ToDll(_argv[0] + _file)
		else {
			_s_path = SPLITPATH(_file)
			if _s_path[3] == '.dl2'
				_targets ,= _s_path[2]
		}
	}

	// Erase old dll, Rename extension dl2 to dll
	foreach _targets; _target {
		_path = _argv[0] + '\' + _target
		_dmy = FDEL(_path + '.dll')
		_dmy = FRENAME(_path + '.dl2', _path + '.dll')
	}
}

