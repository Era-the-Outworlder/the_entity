//FUNCTIONEX / SAORI
//******************************************************************************
//------------------------------------------------------------------------------
//Function Name : FUNCTIONLOAD
//Function : Load SAORI
//Argument : _argv[0]　 Target DLL name
//------------------------------------------------------------------------------
FUNCTIONLOAD
{
	// If a load error, end. If the first load, send out a GET Version.
	_r_load = LOADLIB(_argv[0])
	if !_r_load {
		0
		return
	}
	if _r_load == 1 {
		if SUBSTR(SHIORI3FW.SendGETVersion(_argv[0]), 0, 1) != '2' {
			UNLOADLIB(_argv[0])
			0
			return
		}
		SAORI.DllList ,= _argv[0]
	}
	1
}

//------------------------------------------------------------------------------
//Function Name : FUNCTIONEX
//Function : Execute SAORI
//Argument : _argv[0]　 target DLL name
//　　　　		 _argv[1]～ Argument0～
//------------------------------------------------------------------------------
FUNCTIONEX
{
	if FUNCTIONLOAD(_argv[0]) == 0 {
		0
		return
	}

	//  Create Request String
	_reqheader = /
		"EXECUTE SAORI/1.0%(C_CRLF)Charset: %(CHARSETLIBEX(_argv[0]))%(C_CRLF)Sender: AYA%(C_CRLF)SecurityLevel: Local%(C_CRLF)"
	for _i = 1; _i < _argc; _i++ {
		_reqheader += "Argument%(_i - 1): %(_argv[_i])%(C_CRLF)"
	}
	_reqheader += C_CRLF

	// Execute
	SHIORI3FW.RequestLib(_argv[0], _reqheader)

	if var.lib.result != ''
		var.lib.result
	SHIORI3FW.MakeValueexVariable
}

//------------------------------------------------------------------------------
//Function Name : SAORI
//Function : Run Saori
//        This is a synonym for FUNCTIONEX.The speed will be slower than FUNCTIONEX because of the "one-step geta", but it is not enough to worry about.
//------------------------------------------------------------------------------
SAORI { FUNCTIONEX(_argv) }

//------------------------------------------------------------------------------
//Function Name : SHIORI3FW.SendGETVersion
//Function : Send GET Version to SAORI.
//Argument : _argv[0] SAORI file name
//------------------------------------------------------------------------------
SHIORI3FW.SendGETVersion
{
	SHIORI3FW.RequestLib(_argv[0], "GET Version SAORI/1.0%(C_CRLF)Charset: %(CHARSETLIBEX(_argv[0]))%(C_CRLF)Sender: AYA%(C_CRLF2)")

	LIB.STATUSCODE
}

//------------------------------------------------------------------------------
//Function Name : SHIORI3FW.RequestLib
//Function : Send a request to SAORI and get the result
//Argument : _argv[0] SAORI file name
//　　　　		 _argv[1] Request string
//------------------------------------------------------------------------------
SHIORI3FW.RequestLib
{
	LIB.PROTOCOL   = ''
	LIB.STATUSCODE = ''

	//  Send Request
	_result = REQUESTLIB(_argv[0], _argv[1])

	// Analysis of results

	// Split on a new line
	_lines = RE_SPLIT(_result, C_CRLF)

	// Getting protocol names and results
	_seppos = STRSTR(_lines[0], ' ', 0)
	if _seppos == -1; return
	LIB.PROTOCOL   = SUBSTR(_lines[0], 0, _seppos)
	LIB.STATUSCODE = SUBSTR(_lines[0], _seppos + 1, STRLEN(_lines[0]) - _seppos - 1)

	// Getting the response header
	var.lib.key   = IARRAY
	var.lib.value = IARRAY
	var.lib.result = ''
	
	_skip = 1
	foreach _lines; _lin {
		// Skip the first line.
		if _skip {
			_skip = 0
			continue
		}

		// Get key and value
		_len         = STRLEN(_lin)
		_pos         = STRSTR(_lin, ': ', 0)
		var.lib.key ,= (_key = SUBSTR(_lin, 0, _pos))
		_value       = SUBSTR(_lin, _pos + 2, _len - _pos - 2)
		_valuecv     = ''
		
		if var.lib.key == '' {
			break
		}

		if SHIORI3FW.AUTO_DATA_CONVERT {
			if ISINTSTR(_value)
				_valuecv = TOINT(_value)
			elseif ISREALSTR(_value)
				_valuecv = TOREAL(_value)
			else
				_valuecv = REPLACE(_value, C_BYTE1, ',')
		}
		else {
			_valuecv = TOAUTOEX(_value)
		}
		
		var.lib.value ,= _valuecv
		if _key == 'Result' {
			var.lib.result = _valuecv
		}
	}
}

//------------------------------------------------------------------------------
//Function Name : SHIORI3FW.MakeValueexVariable
//Function :  Create a valueex* variable from the request header
//Argument : _argv[0] SAORI file name
//　　　　		 _argv[1] Request string
//------------------------------------------------------------------------------
SHIORI3FW.MakeValueexVariable
{
	SHIORI3FW.ValueexList = IARRAY
	_sz                   = ARRAYSIZE(var.lib.key)
	for _i = 0; _i < _sz; _i++ {
		if SUBSTR(_keyname = var.lib.key[_i], 0, 5) == "Value" {
			_varname = "valueex%(SUBSTR(_keyname, 5, 3))"
			void EVAL("%(_varname) = var.lib.value[_i]")
			SHIORI3FW.ValueexList ,= _varname
