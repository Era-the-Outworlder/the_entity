//------------------------------------------------------------------------------
//Function Name : SHIORI3FW.PushAdditionalReturn
//Function : Add a header (setting is reset for each request)
//Argument : _argv[0] Header name  _argv[1] value
//------------------------------------------------------------------------------
SHIORI3FW.PushAdditionalReturn : void
{
	_key="%(_argv[0]): "
	_argv[0]=IARRAY
	SHIORI3FW.AdditionalReturn.String += _key+TOSTR(_argv)+C_CRLF
}

